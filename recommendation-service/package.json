{
  "name": "recommendation",
  "version": "1.0.0",
  "description": "AI-powered product recommendation service with collaborative and content-based filtering",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "docker:build": "docker build -t recommendation-service .",
    "docker:run": "docker run -p 3000:3000 --env-file .env recommendation-service",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log"
  },
  "keywords": [
    "recommendation-engine",
    "recommendation-system",
    "machine-learning",
    "collaborative-filtering",
    "content-based-filtering",
    "hybrid-recommendations",
    "personalization",
    "e-commerce",
    "ai",
    "nodejs",
    "mongodb",
    "redis"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/recommendation-service.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 10000,
    "verbose": true
  },
  "directories": {
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/yourusername/recommendation-service/issues"
  },
  "homepage": "https://github.com/yourusername/recommendation-service#readme"
}
